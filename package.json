{
  "name": "js.tau",
  "version": "0.1.0",
  "license": "ISC",
  "private": true,
  "author": "Kevin Herrera <kevin@herrera.io>",
  "description": "A template for creating Electron apps using React with TypeScript.",
  "keywords": [
    "electron",
    "react",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/kherge/js.tau/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kherge/js.tau.git"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^6.0.1",
    "cross-env": "^7.0.3",
    "electron": "12.0.2",
    "electron-is": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2, <4.2.0",
    "wait-on": "^5.3.0",
    "webpack-cli": "^4.6.0"
  },
  "scripts": {
    "build": "npm run build:react && npm run build:electron",
    "build:electron": "npm run build:setup && electron-forge package",
    "build:react": "react-scripts build",
    "build:setup": "webpack --config electron/webpack.config.js --stats errors-warnings",
    "release": "npm run build:react && electron-forge make",
    "start": "npm run build:setup && node scripts/start.js",
    "start:electron": "wait-on tcp:3000 && electron-forge start",
    "start:react": "cross-env BROWSER=none react-scripts start",
    "test": "react-scripts test"
  },
  "browserslist": [
    "last 1 electron version"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "config": {
    "forge": "electron/forge.config.js"
  },
  "homepage": "./",
  "main": "build/setup.js"
}